/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {

body {
color: "#f1e8e6";
}

@media (max-width: 62.5rem) {
html {
font-size: 62.5%;
}
}
}

@layer components {
.container {
@apply mx-auto w-fit min-h-[30rem] h-[90vh] mt-8 flex gap-8 flex-col;
}
}